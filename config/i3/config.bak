# minor aeshthetics
for_window [class="^.*"] border pixel 0
new_window 1pixel
bindsym $mod+t border normal
bindsym $mod+u border pixel 0
# bindsym $mod+m bar mode toggle

# window rules
title_align center
for_window [class=".*"] title_format "<b>%title</b>"

# floating rules
set $float floating enable, border normal 0
for_window [class="bookmarks"] $float
for_window [class="Arandr"] $float
for_window [class="File Transfer*"] $float
for_window [class="Org.gnome.Nautilus"] $float
for_window [class="Nm-connection-editor"] $float
for_window [window_role="GtkFileChooserDialog"] resize set 900 600, move position center

# workspace rules
assign [class="firefox"] "4"
assign [class="VSCodium"] "6"
assign [class="TelegramDesktop"] "5"
assign [class="feh"] "5"
assign [class="Xarchiver"] "5"
#smart_gaps on

# brightness controls
bindsym XF86MonBrightnessDown exec "bash .config/i3/brightness.sh -"
bindsym XF86MonBrightnessUp exec "bash .config/i3/brightness.sh +"

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

bindsym $mod+mod1+space exec --no-startup-id playerctl play-pause
bindsym $mod+mod1+n exec --no-startup-id playerctl next
bindsym $mod+mod1+p exec --no-startup-id playerctl previous

bindsym Print exec flameshot full -p /home/dave/Pictures

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# locking screen
bindsym $mod+l exec i3lock -t -i /home/dave/Pictures/color191.png
exec --no-startup-id "xautolock -time 5 -locker 'i3lock -i /home/dave/Pictures/color191.png'"

# Setting background
exec --no-startup-id feh --bg-fill /home/dave/Pictures/Flat-Design-Wallpapers-HD.png 

exec_always --no-startup-id /home/dave/.config/polybar/launch.sh

# Load layout for the frist workspace
exec --no-startup-id "bash /home/dave/.config/i3/brightness.sh"
exec --no-startup-id "i3-msg 'workspace 1; append_layout /home/dave/.config/i3/workspace-1.json'"
exec --no-startup-id termite -e ranger --class="Ranger"
exec --no-startup-id termite
exec --no-startup-id termite -e "sudo dmesg -w --human --notime" --class="Dmesg"
exec --no-startup-id termite -e "tty-clock -c -C 4" --class="Clock"
exec --no-startup-id termite -e "ytop -c personal" --class="Ytop"

exec --no-startup-id "i3-msg 'workspace 2; append_layout /home/dave/.config/i3/workspace-2.json'"
exec --no-startup-id termite -e "vim /home/dave/.config/i3/i3.kbind" --class="Vim" 
exec --no-startup-id termite
exec --no-startup-id twmnd
exec --no-startup-id flameshot
exec --no-startup-id automount

# Startup compositor
exec --no-startup-id picom --config /home/dave/.config/picom.conf


